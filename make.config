# set compilers GNU
CC=gcc
F90=gfortran

# set compilers ECMWF Cray
#CC=cc
#F90=ftn

# full path to your numpy core includes
#NUMPYINCLUDE=path/to/your/numpy/lib/python3.6/site-packages/numpy/core/include/numpy
NUMPYINCLUDE = 

# full path to your python includes
#PYINCLUDE = path/to/your/python/include/python3.6m
PYINCLUDE = 

# set includes
INC = -I${PYINCLUDE} -I${NUMPYINCLUDE}

# set Fortran compiler flags for GNU
FFLAGS = -O3 -ffree-line-length-0 
#set Fortran compiler flags for ECMWF Cray
#FFLAGS = -O3

# set C compiler flags
CFLAGS = -O3 
